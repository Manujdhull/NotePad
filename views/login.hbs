    <a class="m-3 btn btn-primary" href="/user/signup">Sign up</a>
    <center>
        <main class="card px-5 py-2" style="width: 40rem;">
            <form class="" action="/login" method="Post">
                <section class="">
                    <p class="text-center h1 fw-bold">Login</p>
                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input type="text" name="username" id="form3Example1c" class="form-control" required />
                                <label class="form-label" for="form3Example1c">User Name</label>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <input type="password" name="password" id="form3Example4c" class="form-control"
                                    required />
                                <label class="form-label" for="form3Example4c">Password</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                </section>
            </form>
        </main>
    </center>
    <!-- Bootstrap JavaScript Libraries -->
